generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Employee {
  id          String        @id @default(cuid())
  name        String
  role        String // System role mirror (legacy/compatibility)
  jobRole     String        @default("STAFF") // Kitchen, Hall, etc.
  hourlyRate  Int
  records     AttendanceRecord[]
  user        User?
  wageHistory WageHistory[]
}

model WageHistory {
  id          String   @id @default(cuid())
  employee    Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  employeeId  String
  hourlyRate  Int
  effectiveDate DateTime // Stored as YYYY-MM-01
  createdAt   DateTime @default(now())

  @@unique([employeeId, effectiveDate])
}

model AttendanceRecord {
  id           String   @id @default(cuid())
  employee     Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  employeeId   String
  date         DateTime
  clockIn      String?
  clockOut     String?
  breakStart   String?
  breakEnd     String?
  shiftStart   String?
  shiftEnd     String?
  breakMinutes Int?     @default(0)
  note         String?
  
  @@unique([employeeId, date])
}

model User {
  id           String    @id @default(cuid())
  loginId      String    @unique
  passwordHash String
  role         UserRole
  employeeId   String?   @unique
  employee     Employee? @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  createdAt    DateTime  @default(now())
}

enum UserRole {
  ADMIN
  EMPLOYEE
}
